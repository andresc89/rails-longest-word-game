<h2>these are your letters</h2>
<div class= "d-flex align-items-start">
  <% @letters.each do |letter| %>
  <div class="d-inline p-2 bg-primary text-white m-3" style="width: 50px; text-align: center">
    <%= letter %>
  </div>
  <%end%>
</div>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
 <input type="text" name="word" placeholder="What's the longest word you can find?">
  <input type="submit">
</form>
